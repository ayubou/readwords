{
  // TODO:見直す
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "noEmit": true,
    "types": ["vite/client", "node"],
    "skipLibCheck": true
  },
  "include": ["src", "env.d.ts"]
}
